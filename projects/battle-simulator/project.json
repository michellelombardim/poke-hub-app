{
  "name": "battle-simulator",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "prefix": "app",
  "sourceRoot": "projects/battle-simulator/src",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nx/angular:webpack-browser",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/projects/battle-simulator",
        "index": "projects/battle-simulator/src/index.html",
        "main": "projects/battle-simulator/src/main.ts",
        "polyfills": [
          "zone.js"
        ],
        "tsConfig": "projects/battle-simulator/tsconfig.app.json",
        "inlineStyleLanguage": "scss",
        "assets": [
          {
            "glob": "**/*",
            "input": "projects/battle-simulator/public",
            "output": "."
          }
        ],
        "styles": [
          "projects/battle-simulator/src/styles.scss"
        ],
        "scripts": [],
        "serviceWorker": true,
        "ngswConfigPath": "projects/battle-simulator/ngsw-config.json",
        "customWebpackConfig": {
          "path": "projects/battle-simulator/webpack.config.js"
        },
        "commonChunk": false
      },
      "configurations": {
        "production": {
          "budgets": [
            {
              "type": "initial",
              "maximumWarning": "500kb",
              "maximumError": "1mb"
            },
            {
              "type": "anyComponentStyle",
              "maximumWarning": "7kb",
              "maximumError": "10kb"
            }
          ],
          "outputHashing": "all",
          "customWebpackConfig": {
            "path": "projects/battle-simulator/webpack.prod.config.js"
          }
        },
        "development": {
          "buildOptimizer": false,
          "optimization": false,
          "vendorChunk": true,
          "extractLicenses": false,
          "sourceMap": true,
          "namedChunks": true
        }
      },
      "defaultConfiguration": "production"
    },
    "serve": {
      "executor": "@nx/angular:dev-server",
      "options": {
        "port": 4202,
        "publicHost": "http://localhost:4202"
      },
      "configurations": {
        "production": {
          "buildTarget": "battle-simulator:build:production"
        },
        "development": {
          "buildTarget": "battle-simulator:build:development"
        }
      },
      "defaultConfiguration": "development"
    },
    "extract-i18n": {
      "executor": "ngx-build-plus:extract-i18n",
      "options": {
        "buildTarget": "battle-simulator:build",
        "extraWebpackConfig": "projects/battle-simulator/webpack.config.js"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "projects/battle-simulator/jest.config.ts"
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "battle-simulator:build",
        "port": 4202,
        "spa": true
      }
    }
  }
}